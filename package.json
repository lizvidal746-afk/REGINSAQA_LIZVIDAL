{
  "name": "reginsa",
  "version": "1.0.0",
  "description": "Framework QA personal para REGINSA",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:01": "playwright test --project=chromium --workers=1 --grep \"01-AGREGAR ADMINISTRADO\"",
    "test:02": "playwright test --project=chromium --workers=1 --grep \"02-REGISTRAR SANCIÓN\"",
    "test:03": "playwright test --project=chromium --workers=1 --grep \"03-RECONSIDERAR SIN SANCIONES\"",
    "test:04": "playwright test --project=chromium --workers=1 --grep \"04-RECONSIDERAR CON SANCIONES\"",
    "test:functional:all": "playwright test --project=chromium --workers=1 --grep \"01-AGREGAR ADMINISTRADO|02-REGISTRAR SANCIÓN|03-RECONSIDERAR SIN SANCIONES|04-RECONSIDERAR CON SANCIONES\"",
    "test:01:fast": "powershell -ExecutionPolicy Bypass -File scripts/run-test01-fast.ps1",
    "test:01:scale": "powershell -ExecutionPolicy Bypass -File scripts/run-test01-scale.ps1",
    "test:01:demo": "powershell -ExecutionPolicy Bypass -File scripts/run-test01-demo.ps1",
    "pool:prewarm": "node scripts/prewarm-pool.js",
    "pool:status": "node scripts/prewarm-pool.js --status",
    "pool:reset-base": "node scripts/reset-base-pool.js",
    "base:reiniciar-completo": "npm run iteracion:reiniciar && npm run pool:reset-base && npm run pool:prewarm",
    "posttest:01": "powershell -ExecutionPolicy Bypass -File scripts/post-test01-reportes.ps1",
    "test:caso1": "playwright test --project=chromium --workers=1 --grep \"01-AGREGAR ADMINISTRADO\"",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:workers2": "playwright test --workers=2",
    "test:e2e:workers4": "playwright test --workers=4",
    "test:e2e:shard1": "playwright test --shard=1/2",
    "test:e2e:shard2": "playwright test --shard=2/2",
    "report:html": "playwright show-report",
    "report:allure:generate": "allure generate allure-results --clean -o allure-report",
    "report:allure:open": "allure open allure-report",
    "test:01:perf": "npm run test:01 && npm run k6:smoke:report",
    "clean:run": "powershell -ExecutionPolicy Bypass -File scripts/limpiar-ejecucion.ps1 -Modo rapida",
    "clean:all": "powershell -ExecutionPolicy Bypass -File scripts/limpiar-ejecucion.ps1 -Modo completa",
    "iteracion:reiniciar": "powershell -ExecutionPolicy Bypass -File scripts/limpiar-ejecucion.ps1 -Modo reinicio",
    "clean:archive": "powershell -ExecutionPolicy Bypass -File scripts/limpiar-ejecucion.ps1 -Modo completa -GuardarEvidencia",
    "k6:smoke": "k6 run docs/plantillas/k6_smoke_reginsa.js --env BASE_URL=%BASE_URL%",
    "k6:smoke:report": "if not exist reportes mkdir reportes && k6 run docs/plantillas/k6_smoke_reginsa.js --env BASE_URL=%BASE_URL% --summary-export reportes/k6-summary.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.13.10",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "typescript": "^5.9.2",
    "dotenv": "^16.6.1",
    "xlsx": "^0.18.5"
  }
}

{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "@playwright/test"],
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.d.ts",
    "helpers/**/*.ts",
    "playwright.config.ts"
  ]
}
